= form_for @script_theme do |f|
  -if @script_theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@script_theme.errors.count, "error")} prohibited this script_theme from being saved:"
      %ul
        - @script_theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :repository_theme_id
    = f.number_field :repository_theme_id
  .field
    = f.label :questions_to_pass
    = f.number_field :questions_to_pass
  .field
    = f.label :subthemes_to_pass
    = f.number_field :subthemes_to_pass
  .field
    = f.label :order_subthemes
    = f.check_box :order_subthemes
  .field
    = f.label :script_id
    = f.number_field :script_id
  .actions
    = f.submit 'Save'
