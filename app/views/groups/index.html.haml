%h1 Список групп

%table
  %tr
    %th Номер
    %th Год обучения
    %th
    %th

  - @groups.each do |group|
    %tr
      %td= link_to group.name, :controller => 'tests', :discipline => params['discipline'], :group => group
      %td= group.year
      %td= link_to 'Редактировать', edit_group_path(group)
      %td= link_to 'Удалить', group, :confirm => 'Вы уверены?', :method => :delete

%br

-if !@themes.blank?
  %h1 Список тем

  %table
    %tr
      %th Название
      %th Дисциплина
      %th
      %th

    - @themes.each do |theme|
      %tr
        %td= link_to theme.name, :controller => 'tests', :discipline => params['discipline'], :theme => theme
        %td= theme.discipline.name
        %td= link_to 'Редактировать', edit_theme_path(theme)
        %td= link_to 'Удалить', theme, :confirm => 'Вы уверены?', :method => :delete

= link_to 'Новая группа', new_group_path
