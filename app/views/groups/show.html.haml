%label{:class => "label"}= t("activerecord.attributes.group.name", :default => t("activerecord.labels.name", :default => "Номер")) + ":"
%p= @group.name

.form-actions
  = link_to "Назад", groups_path, :class => 'btn'
  = link_to "Редактировать", edit_group_path(@group), :class => 'btn'
  = link_to "Удалить", group_path(@group), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-danger'
