%fieldset
  %legend= t "controllers.#{controller_name}.#{action_name}"
  -if @block.errors.any?
    .alert.alert-error
      %h6 При сохранении произошли ошибки
  .control-group
    = f.label :year, :class => 'control-label'
    .controls
      = f.text_field :year, :class => 'text_field'
  .control-group
    = f.label :discipline_token, "Дисциплина", :class => 'control-label'
    .controls
      = f.text_field :discipline_token, :class => 'text_field'
  .control-group
    = f.label :group_tokens, "Группы", :class => 'control-label'
    .controls
      = f.text_field :group_tokens, :class => 'text_field'
  .control-group
    = f.label :block_num, :class => 'control-label'
    .controls
      = f.number_field :block_num, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to "Отмена", blocks_path, :class => 'btn'
