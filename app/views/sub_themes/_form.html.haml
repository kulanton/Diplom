= form_for @sub_theme do |f|
  -if @sub_theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sub_theme.errors.count, "error")} prohibited this sub_theme from being saved:"
      %ul
        - @sub_theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_num
    = f.number_field :start_num
  .field
    = f.label :end_num
    = f.number_field :end_num
  .field
    = f.label :questions
    = f.number_field :questions
  .field
    = f.label :answers
    = f.number_field :answers
  .field
    = f.label :theme_id
    = f.select :theme_id, Theme.all.map{|t| [t.name, t.id]}
  .actions
    = f.submit 'Сохранить'
