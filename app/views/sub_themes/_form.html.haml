= form_for @sub_theme, :html => {:class => 'form-horizontal'} do |f|
  -if @sub_theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sub_theme.errors.count, "error")} prohibited this sub_theme from being saved:"
      %ul
        - @sub_theme.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'input-xlarge'
    .control-group
      = f.label :start_num, :class => 'control-label'
      .controls
        = f.number_field :start_num, :class => 'input-xlarge'
    .control-group
      = f.label :end_num, :class => 'control-label'
      .controls
        = f.number_field :end_num, :class => 'input-xlarge'
    .control-group
      = f.label :questions, :class => 'control-label'
      .controls
        = f.number_field :questions, :class => 'input-xlarge'
    .control-group
      = f.label :answers, :class => 'control-label'
      .controls
        = f.number_field :answers, :class => 'input-xlarge'
    .control-group
      = f.label :order, :class => 'control-label'
      .controls
        = f.check_box :order, :class => 'checkbox'
    .control-group
      = f.label :theme_id, :class => 'control-label'
      .controls
        = f.select :theme_id, Theme.all.map{|t| [t.name, t.id]}
    .form-actions
      = f.submit 'Сохранить', :class => 'btn btn-primary'
      = link_to 'Назад', sub_themes_path, :class => 'btn'
