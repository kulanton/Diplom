%h1 Список тестов
%table{:class => "table table-striped table-bordered"}
  %thead
    %tr
      %th= t "activerecord.attributes.test.name"
      %th= t "activerecord.attributes.test.scripts"
      %th= t "activerecord.attributes.test.subjects"
      %th.actions Действия
  %tbody
    - @tests.each do |test|
      %tr
        %td= link_to test.name, test_path(test)
        %td
          - test.scripts.each do |script|
            = link_to script.name, script_path(script)
            %br
        %td
        %td
          = link_to "<i class='icon-edit'></i>".html_safe, edit_test_path(test), :class => 'btn btn-mini'
          = link_to "<i class='icon-trash icon-white'></i>".html_safe, test_path(test), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-mini btn-danger' 

= link_to "Новый тест", new_test_path, :class => 'btn btn-primary'

.free-space
