= form_for @theme do |f|
  -if @theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@theme.errors.count, "error")} prohibited this theme from being saved:"
      %ul
        - @theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    &nbsp;
    = f.text_field :name
  .field
    = f.label :discipline_id
    &nbsp;
    = f.select :discipline_id, Discipline.all.map{|d| [d.name, d.id]}
  .actions
    = f.submit 'Сохранить'
