= form_for @theme do |f|
  -if @theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@theme.errors.count, "error")} prohibited this theme from being saved:"
      %ul
        - @theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :script_id
    = f.select :script_id, Script.all.map{|s| [s.name, s.id]}  
  .actions
    = f.submit 'Save'
