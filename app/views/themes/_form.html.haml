= form_for @theme do |f|
  -if @theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@theme.errors.count, "error")} prohibited this theme from being saved:"
      %ul
        - @theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    &nbsp;
    = f.text_field :name
  .field
    = f.label :discipline_token, "Дисциплина"
    &nbsp;
    = f.text_field :discipline_token, "data-pre"=>@theme.discipline.to_a.map(&:attributes).to_json
  .actions
    = f.submit 'Сохранить'
