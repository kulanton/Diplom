= form_for @repository_theme do |f|
  -if @repository_theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@repository_theme.errors.count, "error")} prohibited this repository_theme from being saved:"
      %ul
        - @repository_theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :count
    = f.number_field :count
  .actions
    = f.submit 'Save'
