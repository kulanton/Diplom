%fieldset
  %legend= t "controllers.#{controller_name}.#{action_name}"
  - if params[:block]
    = hidden_field_tag 'examine[block_ids][]', params[:block]
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :necessary, :class => 'control-label'
    .controls
      = f.check_box :necessary, :class => 'check_box'
  .control-group
    = f.label :blocked, :class => 'control-label'
    .controls
      = f.check_box :blocked, :class => 'check_box'
  .control-group
    = f.label :num_try, :class => 'control-label'
    .controls
      = f.number_field :num_try, :class => 'number_field'
  .control-group
    = f.label :period, :class => 'control-label'
    .controls
      = f.number_field :period, :class => 'number_field'
  .control-group
    = f.label :test_type, :class => 'control-label'
    .controls
      /= f.select :test_type, @examine.types, :class => 'select'
      %div{:class => 'btn-group', 'data-toggle' => 'buttons-radio'}
        %input{:type => 'button', :class => 'btn', :value => 'Тип 1', :id => 'btn-themes'}
        = hidden_field_tag :results_themes
        %input{:type => 'button', :class => 'btn', :value => 'Тип 2', :id => 'btn-questions'}
        = hidden_field_tag :results_questions
        %input{:type => 'button', :class => 'btn', :value => 'Тип 3', :id => 'btn-detaled'}
        = hidden_field_tag :results_detaled
  .control-group
    = f.label :w_key, :class => 'control-label'
    .controls
      = f.check_box :w_key, :class => 'checkbox'
  .control-group
    = f.label :ext_access, :class => 'control-label'
    .controls
      = f.check_box :ext_access, :class => 'checkbox'
  .control-group
    = f.label :msiu_access, :class => 'control-label'
    .controls
      = f.check_box :msiu_access, :class => 'checkbox'
  .control-group
    = f.label :scheduled_date, :class => 'control-label'
    .controls
      = f.text_field :scheduled_date, {:id => 'datepicker'}
  .control-group
    = f.label :scheduled_pair, :class => 'control-label'
    .controls
      = f.number_field :scheduled_pair, :class => 'number_field'

  = f.fields_for :scripts do |builder|
    = render "script", :f => builder

  %div= link_to_add_fields "Добавить сценарий", f, :scripts

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to "Отмена", examines_path, :class => 'btn'
