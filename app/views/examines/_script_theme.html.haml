%fieldset.partial
  %legend
    Тема
    = link_to_remove_fields "Удалить", f
  .control-group
    = f.label :name, "Название", :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :repository_theme_id, "Репозиторий тем", :class => 'control-label'
    .controls
      = f.text_field :repository_theme_id, {:class => 'autocomplete-field', :onfocus => 'autocompleteField()'}
  .control-group
    = f.label :questions_to_pass, "Необходимо сдать вопросов", :class => 'control-label'
    .controls
      = f.number_field :questions_to_pass, :class => 'number_field'
  .control-group
    = f.label :subthemes_to_pass, "Необходимо сдать подтем", :class => 'control-label'
    .controls
      = f.number_field :subthemes_to_pass, :class => 'number_field'
  .control-group
    = f.label :order_subthemes, "Сортировать подтемы", :class => 'control-label'
    .controls
      = f.check_box :order_subthemes, :class => 'check_box'
      
  %div= link_to_add_fields "Добавить подтему", f, :script_sub_themes
